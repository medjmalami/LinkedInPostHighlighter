{
  "manifest_version": 2,
  "name": "LinkedIn Recent Posts Highlighter",
  "version": "1.0",
  "description": "Highlights LinkedIn posts from the last 24 hours in green",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "linkedin-highlighter@example.com"
    }
  }
}